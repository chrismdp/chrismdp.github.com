:plain
  ---
  layout: default
  ---

.hero-unit
  %p
    %a{:href => "{{ site.url }}" } a blog by Chris Parsons
  %h1 {{ page.title }}

%hr

#post.row
  .span8
    %article.post.single-post
      .entry-content
        {{ content }}

        :plain
          {% include postscript.html %}

      .clr

      %section#comments
        <div id="disqus_thread"></div>
        :javascript
          var disqus_shortname = 'chrismdp';
          var disqus_identifier = '{{ page.id }}';
          (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();

  .sidebar.span4
    %p
      Posted {{ page.date | date: "%B %d, %Y" }}
    .widget
      %h4 Share this
      :plain
        {% assign post = page %}
        {% include strap.html %}
    -#.widget
      -#:plain
        -#{% include kickstarter.html %}
    .widget
      %h4 Post Categories
      %ul.tags
        :plain
          {% for tag in page.categories %}<li><a class='tag' href='/tag/{{ tag }}/'>{{tag}}</a></li>{% endfor %}

    .widget
      %h4 Related posts
      %ul.list-style
        :plain
          {% for post in site.related_posts limit:5 %}
            <li><i class="icon-chevron-right"></i> <a href="{{ post.url }}">{{ post.title }}</a><br/><span class='muted'>{{ post.date | date_to_string }}</span></li>
          {% endfor %}
    .widget
      :plain
        {% include hello.html %}
    .widget
      :plain
        {% include soltrader.html %}
    .widget
      :plain
        {% include cardpirates.html %}
    .widget
      :plain
        {% include twitch.html %}
    .widget
      %h4 More
      %ul.list-style
        %li
          %i.icon-chevron-right
          %a{:href => '/all'} Archives
        %li
          %i.icon-chevron-right
          %a{:href => '/tags'} All Categories
